<Window x:Class="BrightnessPlugin.BrightnessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrightnessPlugin"
        mc:Ignorable="d"
        Title="BrightnessWindow" Height="197.404" Width="291.526" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid Background="#FF1E1E1E">
        <Slider x:Name="PercentSlider" HorizontalAlignment="Left" Margin="83,109,0,0" VerticalAlignment="Top" Width="124" RenderTransformOrigin="0.5,0.5" Value="1" TickFrequency="0.1" Maximum="20" ValueChanged="slider_ValueChanged">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="2" ScaleY="2"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Label x:Name="Percent" Content="Label" HorizontalAlignment="Left" Margin="23,28,0,0" VerticalAlignment="Top" Height="58" Width="238" Foreground="White" VerticalContentAlignment="Center" FontSize="22"/>

    </Grid>
</Window>
